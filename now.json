{
  "version": 2,
  "name": "kms-www",
  "public": true,
  "alias": "kms-www",
  "builds": [
    {
      "src": "www/next.config.js", 
      "use": "@now/next",
      "config": {
        "maxLambdaSize": "10mb"
      }
    },
    {
      "src": "blog/package.json", "use": "@now/static-build"
    },
    { 
      "src": "api/build/index.js", "use": "@now/node-server" 
    }
  ],
  "routes": [
    {
      "src": "/about",
      "dest": "/www/about"
    },
    {
      "src": "/",
      "dest": "/www/index"
    },
    {
      "src": "/first-page",
      "dest": "/blog/hello-world/index.html"
    },
    {
      "src": "/blog",
      "dest": "/blog/archives/index.html"
    },
    {
      "src": "^/www/_next/(.*)",
      "dest": "/www/_next/$1"
    },
    {
      "src": "^/blog/_next/(.*)",
      "dest": "/blog/_next/$1"
    },
    { "src": "/api/.*", "dest": "/api/build/index.js" }
  ]
}
